{
  "name": "elastalert2-server",
  "version": "5.12.0",
  "description": "A server that runs ElastAlert2 and exposes REST API's for manipulating rules and alerts.",
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karql/elastalert2-server.git"
  },
  "directories": {
    "lib": "./lib",
    "test": "./test"
  },
  "dependencies": {
    "@tsoa/runtime": "^6.6.0",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "elasticsearch": "^16.7.3",
    "express": "^4.21.2",
    "joi": "^18.0.1",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "randomstring": "^1.3.1",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@tsoa/cli": "^6.6.0",
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.19",
    "@types/elasticsearch": "^5.0.43",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "^4.19.5",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.6.1",
    "@types/randomstring": "^1.3.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "concurrently \"nodemon\" \"nodemon --config nodemon-spec.json\"",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node dist/index.js",
    "serve": "nodemon --inspect --watch dist/ -d 1 ./dist/index.js",
    "tsc:watch": "tsc -w",
    "tsc:build": "tsc"
  }
}
